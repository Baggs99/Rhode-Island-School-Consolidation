{
  "name": "rhode-island-school-consolidation-map",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:data": "tsx scripts/build-data.ts",
    "build:districts": "tsx scripts/build-districts.ts",
    "build:public": "tsx scripts/build-public-schools.ts",
    "build:private": "tsx scripts/build-private-schools.ts",
    "build:enrollment": "tsx scripts/build-enrollment.ts",
    "build:budgets": "tsx scripts/build-budgets.ts",
    "build:centroids": "tsx scripts/build-district-centroids.ts",
    "build:anchors": "tsx scripts/build-district-anchors.ts",
    "predev": "npm run build:enrollment && npm run build:budgets && npm run build:centroids && npm run build:anchors",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev --workspace backend\" \"npm run dev --workspace frontend\"",
    "build": "npm run build --workspace frontend && npm run build --workspace backend",
    "start": "node backend/dist/server.js",
    "lint": "npm run lint --workspace frontend"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@turf/boolean-point-in-polygon": "^7.1.0",
    "@turf/centroid": "^7.3.4",
    "@turf/helpers": "^7.1.0",
    "@turf/point-on-feature": "^7.3.4",
    "adm-zip": "^0.5.16",
    "csv-parse": "^5.5.6",
    "shapefile": "^0.6.6",
    "shpjs": "^6.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "playwright": "^1.58.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
  }
}
